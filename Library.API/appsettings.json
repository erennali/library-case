{
  "ConnectionStrings": {
    "Default": "Server=localhost,1433;Database=Library;User Id=sa;Password=YourPassword123!;TrustServerCertificate=true"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "RISE-Library-API",
    "Audience": "RISE-Library-Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "UseSsl": true,
    "FromEmail": "noreply@riselibrary.com",
    "FromName": "RISE Library"
  },
  "Security": {
    "RequireHttps": true,
    "PasswordMinLength": 8,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialCharacter": true,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "RateLimit": {
    "EnableRateLimiting": true,
    "PerSecondLimit": 100,
    "PerMinuteLimit": 1000,
    "PerHourLimit": 10000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}